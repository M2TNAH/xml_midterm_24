    <poem>
        <body>    
                <l type="verse">
                    <!-- first part of the line with tags for individual alliterating words, the type corresponds to the sound which alliterates -->
                    <alliteration sound="a"></alliteration> <!-- example: the first word alliterating in a -->
                    <alliteration sound="a"></alliteration> <!-- example: the second word alliterating in a -->
                    <!-- segments to highlight words which highlight features of the sky -->
                    <seg type="sky_lexical_field"></seg>
                    <!-- caesura to respect the traditional (editorial) presentation of Old English poetry -->
                    <milestone unit="caesura"/>
                    <!-- same structure as above after the caesura -->
                    <alliteration sound="b"></alliteration> <!-- example: the first word alliterating in b -->
                    <alliteration sound="b"></alliteration> <!-- example: the second word alliterating in b -->
                    <seg type="sky_lexical_field"></seg>
                </l>
                <l type="verse">
                    <alliteration sound="a"></alliteration> 
                    <alliteration sound="a"></alliteration> 
                    <seg type="sky_lexical_field"></seg>
                    <milestone unit="caesura"/>
                    <alliteration sound="b"></alliteration> 
                    <alliteration sound="b"></alliteration> 
                    <seg type="sky_lexical_field"></seg>
                </l>
                <l type="verse">
                    <alliteration sound="a"></alliteration> 
                    <alliteration sound="a"></alliteration> 
                    <seg type="sky_lexical_field"></seg>
                    <milestone unit="caesura"/>
                    <alliteration sound="b"></alliteration>
                    <alliteration sound="b"></alliteration> 
                    <seg type="sky_lexical_field"></seg>
                </l>
        </body>
